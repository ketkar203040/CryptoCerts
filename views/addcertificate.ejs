<% include partials/header %> 
<h2 class="w-100 mt-5 mb-3 text-center">Issue a Certificate</h2>
<form method="POST" action="/issuer/issueCert" class="mx-auto mt-5" style="width: 30%;">
    <div class="form-group"><input class="form-control" type="text" placeholder="Name" name="name" required></div>
    <div class="form-group"><input class="form-control" type="text" placeholder="Degree" name="degree" required></div>
    <div class="form-group"><input class="form-control" type="text" placeholder="College" name="clg" required></div>
    <div class="form-group"><input class="form-control" type="text" placeholder="Score" name="score" required></div>
    <div class="form-group"><input class="form-control" type="text" placeholder="Batch" name="batch" required></div>
    <div class="form-group"><input class="form-control" type="email" placeholder="email" name="email" required></div>
    <div class="form-group"><input class="form-control btn btn-dark" type="submit" value="Submit"></div>
</form>

<form class="form-inline mx-auto w-75 justify-content-center" action="/issuer/issuecert/bulk" method="POST" enctype="multipart/form-data">
    <h2 class="w-100 mt-5 mb-3 text-center">Issue Certificate in Bulk</h2>
    <input class="form-control-lg w-50 mr-sm-2" id="textbox" type="url" placeholder="Upload verify.json file" readonly>

    <div class="m-3">
        <label class="btn btn-md btn-dark" for="verifyfile">Upload file...</label>
        <input type="file" name="verifyfile" id="verifyfile">
    </div>
    <button class="btn btn-md btn-dark" type="submit">Deploy Certificates</button>
</form>
<script src="/js/landing.js"></script>
<% include partials/footer %> 