<% include partials/header %>
<div class="container mt-5">
    <% if(cert){ %>
    <a class="btn btn-dark mb-3" href="<%= cert.downloadlink %>">Download Verify.json</a>
    <div class="card border-primary">
        <div class="card-body">
            <h1 class="cert-font cert-head text-center">Certificate of Completion</h1>
            <p class="cert-font cert-body text-center">This is to certify that</p>
            <h3 class="text-center"><%= cert.name %></h3>
            <p class="cert-font cert-body text-center">has successfully completed</p> 
            <h3 class="text-center"><%= cert.degree %></h3>
            <p class="cert-font cert-body text-center">with a score of </p>
            <h3 class="text-center"><%= cert.score %></h3>
            <p class="cert-font cert-body text-center">from </p>
            <h3 class="text-center"><%= cert.college %></h3>
        </div>
    </div>
    <%}%>
</div>
<% include partials/footer %>